<% provide :title, t("views.users.new.title") %>
<% provide :button_text, t("views.users.new.bt_title_signup") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= t "views.users.new.title" %></h1>
    <div class="form-login">
      <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
        <%= devise_error_messages! %>

        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class: "form-control input-sm chat-input" %>

        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "off", class: "form-control input-sm chat-input" %>

        <%= f.label :phone %>
        <%= f.number_field :phone, autocomplete: "off", class: "form-control input-sm chat-input" %>

        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t("views.password.edit.charact_min") %>)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control input-sm chat-input" %>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-sm chat-input" %>
        <div class="wrapper">
          <%= f.submit yield(:button_text), class: "btn btn-primary btn-md" %>
        </div >
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

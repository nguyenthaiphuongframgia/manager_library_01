<% provide :title, t("views.password.new.forgot") %>
<div class="row">
  <div class="col-md-4">
    <div class="form-login margin_top">
      <%= form_for resource, as: resource_name, url: password_path(resource_name) do |f| %>
        <%= devise_error_messages! %>
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true , class: "form-control input-sm chat-input" %>
        <div class="wrapper">
          <%= f.submit t("views.password.new.sent_email"), class: "btn btn-primary btn-md" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
